@model SalesForce.Models.Company.Company

@{
    ViewBag.Title = "Edit";
}


<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-12'>
            <div class="page-title">

                <div class="float-left"><h1 class="title">Edit Company</h1></div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="col-12">
            <section class="box ">
                <header class="panel_header">
                    @*<h2 class="title float-left">Basic Info</h2>*@
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="#" id="actionform" method="post">
                            <div class="col-12 col-md-9 col-lg-8">

                                <div class="form-group">
                                    <label class="form-label">Company ID</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" readonly="readonly" name="CompanyId" value="@Model.CompanyId" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Company Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="CompanyName" value="@Model.CompanyName" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Short Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="ShortName" value="@Model.ShortName" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Address</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="Address" value="@Model.Address" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Phone</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="Phone" value="@Model.Phone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Fax</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="Fax" value="@Model.Fax" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Website</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="Website" value="@Model.Website" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Domain</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="Domain" value="@Model.Domain" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">NTN</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="NTN" value="@Model.NTN" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">GST</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="GST" value="@Model.GST" class="form-control">
                                    </div>
                                </div>
                            </div>
                            </div>

                            <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                <div class="text-left">
                                    <button type="actionbutton" class="btn btn-primary">Save</button>
                                    <button onclick="location.href = '@Url.Action("Index","Company")'" type="button" class="btn">Return</button>
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
            </section>
        </div>

    </section>
</section>


<script>

    $("#actionbutton").click(function() {

        if (!$("#actionform").valid()) {
            return false;
        }

        $.ajax({
                url: '@Url.Action("Edit","Company")',
                method: 'post',
                data: $("#actionform").serialize()
        }).done(function(response) {
            if (response.success) {
                @Url.Action("Index","Company")
            }
        })
        return false;
    });

</script>