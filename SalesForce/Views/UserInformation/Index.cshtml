@model IEnumerable<SalesForce.Models.Usres.UserInformation>

@{
    ViewBag.Title = "Index";
}

<div style="padding-left: 300px;padding-top: 100px">

    <table id="example" class="table table-striped table-bordered" style="width: 80%">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Password</th>
                <th>Sap Code</th>
                <th>City</th>
                <th>Area</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SapCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            <button onclick="location.href = '@Url.Action("Create","UserInformation")'" class="data-btn btn btn-success" type="button"><i class="fa fa-save"></i> Create</button>
                            <button onclick="location.href='@Url.Action("Edit","UserInformation",new { CityId = item.UserId})'" class="data-btn btn btn-dark" type="button"><i class="fa fa-edit"></i>Edit</button>
                            <button onclick="location.href='@Url.Action("Delete","UserInformation",new { CityId = item.UserId})'" class="data-btn btn btn-danger" type="button"><i class="fa fa-trash"></i> Delete</button>

                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>