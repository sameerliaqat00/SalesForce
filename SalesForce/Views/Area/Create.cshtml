@model SalesForce.Models.Setup.Area

@{
    ViewBag.Title = "Create";
}


<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-12'>
            <div class="page-title">

                <div class="float-left"><h1 class="title">Create Area</h1></div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->
        <div class="col-12">
            <section class="box ">
                <header class="panel_header">
                    @*<h2 class="title float-left">Basic Info</h2>*@
                    <div class="actions panel_actions float-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="#" id="actionform" method="post">
                            <div class="col-12 col-md-9 col-lg-8">


                                <div class="form-group">
                                    <label class="form-label">Area ID</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="AreaId" readonly="readonly" value="@Model.AreaId" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Area Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="AreaName" value="@Model.AreaName" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Area Code</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" name="AreaCode" value="@Model.AreaCode" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Zone</label>
                                    <span class="desc"></span>
                                    <select class="form-control" name="Zone">
                                        @if (ViewBag.Zone != null)
                                        {
                                            foreach (var zone in ViewBag.Zone)
                                            {
                                                if (Model != null)
                                                {
                                                    <option value="@zone.ZoneName" @(zone.ZoneName == Model.Zone ? "selected" : string.Empty)>

                                                        @zone.ZoneName

                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@zone.ZoneName">

                                                        @zone.ZoneName

                                                    </option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">City</label>
                                    <span class="desc"></span>
                                    <select class="form-control" name="City">
                                        @if (ViewBag.City != null)
                                        {
                                            foreach (var city in ViewBag.City)
                                            {
                                                if (Model != null)
                                                {
                                                    <option value="@city.CityName" @(city.CityName == Model.City ? "selected" : string.Empty)>

                                                        @city.CityName

                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@city.CityName">

                                                        @city.CityName

                                                    </option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>



                            </div>

                            <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                <div class="text-left">
                                    <button type="actionbutton" class="btn btn-primary">Save</button>
                                    <button onclick="location.href = '@Url.Action("Index","Area")'" type="button" class="btn">Return</button>
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
            </section>
        </div>

    </section>
</section>


<script>

    
    $("#actionbutton").click(function () {

        if (!$("#actionform").valid()) {
            return false;
        }

        $.ajax({
                url: '@Url.Action("Create","Area")',
                method: 'post',
                data:$("#actionform").serialize()
            })
            .done(function (response) {
                if (response.success) {
                    @Url.Action("Index", "Area")
                }
            })
    })
</script>