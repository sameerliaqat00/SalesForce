@model IEnumerable<SalesForce.Models.Setup.Area>

@{
    ViewBag.Title = "Index";
}

    <div style="padding-left: 300px;padding-top: 100px">
        
        <table id="example" class="table table-striped table-bordered" style="width: 80%">
            <thead>
            <tr>
                <th>Sr#</th>
                <th>Area Name</th>
                <th>Area Code</th>
                <th>Zone</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        <button onclick="location.href = '@Url.Action("Create","Area")'" class="data-btn btn btn-success" type="button"><i class="fa fa-save"></i> Create</button>
                        <button onclick="location.href = '@Url.Action("Edit","Area",new { AreaId = item.AreaId})'" class="data-btn btn btn-dark" type="button"><i class="fa fa-edit"></i>Edit</button>
                        <button onclick="location.href = '@Url.Action("Delete","Area",new { AreaId = item.AreaId})'" class="data-btn btn btn-danger" type="button"><i class="fa fa-trash"></i> Delete</button>

                    </td>
                </tr>
                }

            }
            </tbody>
        </table>

    </div>

<script>
    $(document).ready(function() {
    $('#example').DataTable();
    } );
</script>