@model IEnumerable<SalesForce.Models.Setup.Zones>

@{
    ViewBag.Title = "Index";
}


<div style="padding-left: 300px;padding-top: 100px">

    <table id="example" class="table table-striped table-bordered" style="width: 80%">
        <thead>
            <tr>
                <th>Sr#</th>
                <th>Zone</th>
                <th>Zone Code</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ZoneId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ZoneName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ZoneCode)
                        </td>
                        <td>
                            <button onclick="location.href='@Url.Action("Create","Zone")'" class="data-btn btn btn-success" type="button"><i class="fa fa-save"></i> Create</button>
                            <button onclick="location.href='@Url.Action("Edit","Zone",new { ZoneId = item.ZoneId})'" class="data-btn btn btn-dark" type="button"><i class="fa fa-edit"></i>Edit</button>
                            <button onclick="location.href='@Url.Action("Delete","Zone",new { ZoneId = item.ZoneId})'" class="data-btn btn btn-danger" type="button"><i class="fa fa-trash"></i> Delete</button>

                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

</div>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>